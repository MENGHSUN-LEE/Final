<body hx-ext="response-targets, remove-me" hx-target-error="#toast" hx-on::before-swap="doWrap(event)">

    <div id="app-container">
        <nav id="navbar">
            <a href="#search" id="tab-search" class="nav-link active" data-content-url="/search">ğŸ” æœå°‹</a>
            <a href="#edit" id="tab-edit" class="nav-link" data-content-url="/edit">âœï¸ ç·¨è¼¯</a>
            <a href="#custom" id="tab-custom" class="nav-link" data-content-url="/custom">ğŸ“Š è‡ªé¸åŠŸèƒ½</a>
        </nav>

        <main id="main">
            {{{body}}}
        </main>
    </div>

    <div id="toast"></div>

    <script>
        // ... (doWrap å‡½æ•¸ä¿æŒä¸è®Š) ...

        // é é¢è¼‰å…¥æ™‚æª¢æŸ¥ç•¶å‰è·¯å¾‘ï¼Œæ±ºå®šæ˜¯å¦é¡¯ç¤ºå°èˆªåˆ—
        document.addEventListener('DOMContentLoaded', () => {
            // æª¢æŸ¥ç•¶å‰è·¯å¾‘æ˜¯å¦ç‚ºç¨ç«‹é¦–é  "/" æˆ– "/app"
            const path = window.location.pathname;
            const body = document.body;

            // å¦‚æœæ˜¯ç¨ç«‹é¦–é ï¼Œå‰‡æ·»åŠ  no-nav é¡åˆ¥ä¾†éš±è—å°èˆªåˆ—
            if (path === '/') {
                body.classList.add('no-nav');
            } else if (path === '/app') {
                body.classList.remove('no-nav');
            }

            // è™•ç† Tab é»æ“Šäº‹ä»¶ (åƒ…åœ¨ /app é é¢éœ€è¦)
            if (path === '/app') {
                const tabs = document.querySelectorAll('#navbar .nav-link');
                const main = document.getElementById('tab-content');

                tabs.forEach(tab => {
                    tab.addEventListener('click', function (e) {
                        e.preventDefault();
                        const url = this.getAttribute('data-content-url');

                        // ç§»é™¤æ‰€æœ‰ active ç‹€æ…‹ï¼Œä¸¦ç‚ºç•¶å‰é»æ“Šçš„ Tab åŠ ä¸Š active ç‹€æ…‹
                        tabs.forEach(t => t.classList.remove('active'));
                        this.classList.add('active');

                        // ä½¿ç”¨ htmx è¼‰å…¥å…§å®¹åˆ° #tab-content
                        htmx.ajax('GET', url, { target: '#tab-content', swap: 'innerHTML' });

                        // æ›´æ–° URL Hashï¼Œä¿æŒç‹€æ…‹
                        history.replaceState(null, '', '/app' + this.getAttribute('href'));
                    });
                });

                // åˆå§‹è¼‰å…¥ Tab å…§å®¹ (é è¨­è¼‰å…¥ /search)
                const initialTab = document.querySelector('#tab-search');
                if (initialTab) {
                    const initialUrl = initialTab.getAttribute('data-content-url');
                    // ç¢ºä¿ htmx å·²è¼‰å…¥
                    if (htmx) {
                        htmx.ajax('GET', initialUrl, { target: '#tab-content', swap: 'innerHTML' });
                    }
                }
            }
        });
    </script>
